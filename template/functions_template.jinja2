                {% for data in function2.data[-floor(max_lines / 2):] %}
                    <tr>
                        <td>{{ round(data.x, 3) }}</td>
                        <td>{{ round(data.y, 4) }}</td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
        <table>
